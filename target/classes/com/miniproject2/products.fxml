<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.miniproject2.controller.ProductsController" prefWidth="900.0" prefHeight="560.0">
  <top>
    <ToolBar>
      <Button text="â† Back" onAction="#backToHome"/>
      <Label text="Products" styleClass="title"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <TextField fx:id="searchField" promptText="Search by name/sku" onKeyReleased="#onSearch"/>
    </ToolBar>
  </top>
  <center>
    <TableView fx:id="table" prefHeight="300.0">
      <columns>
        <TableColumn fx:id="colName" text="Name" prefWidth="220.0"/>
        <TableColumn fx:id="colSku" text="SKU" prefWidth="180.0"/>
        <TableColumn fx:id="colPrice" text="Price" prefWidth="120.0"/>
        <TableColumn fx:id="colStock" text="Stock" prefWidth="120.0"/>
      </columns>
    </TableView>
  </center>
  <bottom>
      <GridPane hgap="10.0" vgap="10.0" styleClass="form">
          <padding>
              <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
          </padding>
          <columnConstraints>
        <ColumnConstraints percentWidth="25.0"/>
        <ColumnConstraints percentWidth="75.0"/>
      </columnConstraints>
      <children>
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="SKU:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="skuField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
          <Button text="Create" onAction="#onCreate"/>
          <Button text="Update" onAction="#onUpdate"/>
          <Button text="Delete" onAction="#onDelete"/>
          <Label fx:id="statusLabel" styleClass="status"/>
        </HBox>
      </children>
    </GridPane>
  </bottom>
</BorderPane>
