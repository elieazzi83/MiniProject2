<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.miniproject2.controller.OrdersController" prefWidth="1000.0" prefHeight="600.0">
  <top>
    <ToolBar>
      <Button text="← Back" onAction="#backToHome"/>
      <Label text="Orders" styleClass="title"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <TextField fx:id="searchField" promptText="Search by order/client/product" onKeyReleased="#onSearch"/>
    </ToolBar>
  </top>
  <center>
    <TableView fx:id="table" prefHeight="340.0">
      <columns>
        <TableColumn fx:id="colOrderNo" text="Order #" prefWidth="160.0"/>
        <TableColumn fx:id="colClient" text="Client" prefWidth="200.0"/>
        <TableColumn fx:id="colProduct" text="Product" prefWidth="200.0"/>
        <TableColumn fx:id="colQty" text="Qty" prefWidth="80.0"/>
        <TableColumn fx:id="colTotal" text="Total" prefWidth="120.0"/>
      </columns>
    </TableView>
  </center>
  <bottom>
      <GridPane hgap="10.0" vgap="10.0" styleClass="form">
          <padding>
              <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
          </padding>
          <columnConstraints>
        <ColumnConstraints percentWidth="25.0"/>
        <ColumnConstraints percentWidth="75.0"/>
      </columnConstraints>
      <children>
        <Label text="Order #:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="orderNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Client:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="clientCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Product:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="productCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Quantity:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="quantityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
          <Button text="Create" onAction="#onCreate"/>
          <Button text="Update" onAction="#onUpdate"/>
          <Button text="Delete" onAction="#onDelete"/>
          <Label fx:id="statusLabel" styleClass="status"/>
        </HBox>
      </children>
    </GridPane>
  </bottom>
</BorderPane>
